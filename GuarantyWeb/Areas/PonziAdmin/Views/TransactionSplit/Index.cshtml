@model IEnumerable<PonziRepostiory.TransactionSplit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index","TransactionSplit",FormMethod.Post))
{
<p><b>Transaction Detail</b>@Html.DropDownList("trans", ViewBag.trans as SelectList, htmlAttributes: new { @class = "form-control" })
   <input type="submit" value="submit"/>
     </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SplitDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SplitPercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFirst)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaturityTime)
        </th>
        <th></th>
    </tr>

@if(Model!=null)
{
    foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SplitDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SplitPercentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFirst)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaturityTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
}

</table>
